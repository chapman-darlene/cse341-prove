<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/add-product" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title">
                <label for="price">Price</label>
                <input type="number" min="0.01" step="0.01" max="1000" name="price" id="price">
                <label for="description">Description</label>
                <input type="text" name="description" id="description">
                <h2>Rating</h2>               
                <label for="html" class="radio">One Star</label>
                <input type="radio" class="radio" id="one" name="rating" value="One Star">
                <label for="css" class="radio">Two Stars</label>
                <input type="radio" id="two" class="radio" name="rating" value="Two Stars">
                
                <label for="css" class="radio">Three Stars</label>
                <input type="radio" id="three" class="radio" name="rating" value="Three Stars">
               
                <label for="css" class="radio">Four Stars</label>
                <input type="radio" id="four" class="radio" name="rating" value="Four Stars">
               
                <label for="css" class="radio">Five Stars</label>
                <input type="radio" id="five" class="radio" name="rating" value="Five Stars">
                
            </div>

            <button class="btn" type="submit">Add Product</button>
        </form>
    </main>
<%- include('includes/end.ejs') %>